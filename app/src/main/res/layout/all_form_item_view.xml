<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/segmentCardView"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/form_layout_small_margin"
    android:layout_marginTop="@dimen/form_layout_small_margin"
    android:layout_marginEnd="@dimen/form_layout_small_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/form_layout_small_margin"
        app:layout_constraintBottom_toBottomOf="@+id/titleActiveForm"
        app:layout_constraintTop_toBottomOf="@+id/titleActiveForm">

        <TextView
            android:id="@+id/titleAllForm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/form_title_height"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/form_title_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.057" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
