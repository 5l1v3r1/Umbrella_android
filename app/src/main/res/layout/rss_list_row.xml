<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/custom_normal_rss_big_margin_top"
    android:orientation="horizontal"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/channel_item_view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_rose">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/custom_normal_rss_width"
            android:layout_height="@dimen/custom_rss_normal_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/custom_rss_normal_margin_right"
            android:src="@drawable/ic_delete_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/delete_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/custom_rss_biggest_margin_right"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/channel_item_view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <View
            android:id="@+id/circle_view"
            android:layout_width="@dimen/custom_rss_width"
            android:layout_height="@dimen/custom_rss_height"
            android:layout_marginLeft="@dimen/custom_rss_small_margin_left"
            android:layout_marginTop="@dimen/custom_rss_smallest_margin_top"
            android:background="@drawable/circle_shape" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/custom_rss_biggest_margin_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rss_channel_title"
                fontPath="fonts/Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_smallest" />

            <TextView
                android:id="@+id/rss_channel_description"
                fontPath="fonts/Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_like_really_small" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>